# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

GET     /list                       controllers.EmployeeController.list

GET     /prepareCreate              controllers.EmployeeController.prepareCreate

POST    /create                     controllers.EmployeeController.create

POST    /edit                       controllers.EmployeeController.edit

GET     /delete                     controllers.EmployeeController.delete(employeeNumber: Int)

GET     /department/list            controllers.DepartmentController.list

GET     /position/list              controllers.PositionController.list

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

